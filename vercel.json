{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@now/static-build",
      "config": { "distDir": "frontend/build" }
    },
    {
      "src": "api/package.json",
      "use": "@now/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/$1" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ]
}
