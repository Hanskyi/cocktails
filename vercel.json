{
  "version": 2,
  "builds": [
    { 
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend" }
    },
    { 
      "src": "api/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "api" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/$1" },
    { "src": "/(.*)", "dest": "frontend/$1" }
  ]
}


